             }  
            
            }
       });
    
                 
    
    button3.addActionListener( new ActionListener()
     {
         public void actionPerformed(ActionEvent f) 
         {
             if (f.getSource() == button3)
             {
                 if (check())
                 count = count -1;
                 current--;
                
               
                 if(current < 10)
                 {
                 button.setEnabled(true);
                   button.setText("Next");
                 }
                 if ( current <0)
                 {
                   current = 0;  
                  }
                 set();
                 
              }
              
          }
       });
                 
   
    
